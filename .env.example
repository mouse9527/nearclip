# NearClip Environment Configuration
# Copy this file to .env and modify the values as needed

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# Android Development
ANDROID_HOME=/path/to/android/sdk
ANDROID_SDK_ROOT=/path/to/android/sdk

# Rust Development
RUST_LOG=debug
RUST_BACKTRACE=1

# Protocol Buffers
PROTOC_PATH=/usr/local/bin/protoc

# Build Settings
ENABLE_DEBUG_FEATURES=true
SKIP_TESTS=false

# Security
NEARCLIP_ENCRYPTION_KEY=your-encryption-key-here
DEVICE_CERTIFICATE_PATH=/path/to/device/certificate

# Network Settings
BLE_SCAN_TIMEOUT=30
CONNECTION_TIMEOUT=10
MAX_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_CLIPBOARD_SYNC=true
ENABLE_FILE_SYNC=false
ENABLE_NOTIFICATION_SYNC=false